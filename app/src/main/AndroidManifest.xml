<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Movie"
        android:name="com.example.movie.core.App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.movie.activity.PlayerActivity">
        </activity>
        <activity android:name="com.example.movie.activity.SeasonActivity" />
        <activity android:name="com.example.movie.activity.MovieActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                    android:configChanges="orientation|keyboardHidden"/>


                <category android:name="android.intent.category.LAUNCHER"
                    android:configChanges="orientation|keyboardHidden"/>
            </intent-filter>
        </activity>
    </application>

</manifest>